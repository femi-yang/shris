<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- 这里设置的在什么包里面的controllers包中的*Controll.java 作为映射 -->
	<bean name="home" class="org.summercool.web.module.WebModuleConfigurer">
		<property name="moduleName" value="server" />
		<property name="uriExtension" value=".htm" />
		<property name="moduleBasePackage" value="com.mes" />
		<property name="context" value="/" />
		<property name="contextPackage" value="/server/" />
	</bean>
	
 	<import resource="classpath*:spring/*-config.xml"/> 

</beans>